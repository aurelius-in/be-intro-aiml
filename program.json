<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Program Details - BEST</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
        }
        header {
            background-color: white !important; /* Ensure header background is white */
        }
        .program-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 2rem;
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .program-title {
            color: #004c99;
            font-weight: 700;
            text-align: center;
            margin-bottom: 2rem;
        }
        .program-section {
            margin-bottom: 2rem;
        }
        .program-section h2 {
            font-size: 1.2rem;
            color: #004c99;
            font-weight: 700;
            margin-bottom: 1rem;
        }
        .program-section ul {
            list-style: none;
            padding: 0;
        }
        .program-section ul li {
            margin-bottom: 0.5rem;
            padding: 0.5rem;
            background: #f8f9fa;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <header>
        <a href="index.html"><img src="logo-1x1.svg" alt="BEST Logo" class="logo"></a>
    </header>
    <main class="program-container">
        <h1 class="program-title" id="programTitle">Program Title</h1>
        <div id="programContent"></div>
    </main>
    <footer>
        <p>&copy; 2024 Blue Eagle School of Technology. All rights reserved.</p>
    </footer>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const urlParams = new URLSearchParams(window.location.search);
            const programType = urlParams.get('type');

            fetch(`${programType}.json`)
                .then(response => response.json())
                .then(data => {
                    document.getElementById('programTitle').textContent = data.category;
                    const programContent = document.getElementById('programContent');
                    
                    data.programs.forEach(program => {
                        const section = document.createElement('div');
                        section.className = 'program-section';
                        
                        const title = document.createElement('h2');
                        title.textContent = program.title;
                        section.appendChild(title);

                        const courseList = document.createElement('ul');
                        program.courses.forEach(course => {
                            const listItem = document.createElement('li');
                            listItem.textContent = course;
                            courseList.appendChild(listItem);
                        });
                        section.appendChild(courseList);

                        programContent.appendChild(section);
                    });
                })
                .catch(error => {
                    console.error('Error fetching the program data:', error);
                });
        });
    </script>
</body>
</html>
